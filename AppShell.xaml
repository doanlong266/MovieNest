<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieNest.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MovieNest"
    Shell.FlyoutBehavior="Disabled"
    Title="MovieNest">

    <TabBar>
        <Tab Title="Movie">
            <Tab.Icon>
                <FontImageSource Glyph="{x:StaticResource Movie}"  FontFamily="FAS"/>
            </Tab.Icon>
        </Tab>
        <Tab Title="Search">
            <Tab.Icon>
                <FontImageSource Glyph="{x:StaticResource Search}"  FontFamily="FAS"/>
            </Tab.Icon>
        </Tab>
        <Tab Title="Setting">
            <Tab.Icon>
                <FontImageSource Glyph="{x:StaticResource Setting}"  FontFamily="FAS"/>
            </Tab.Icon>
        </Tab>
    </TabBar>

</Shell>
